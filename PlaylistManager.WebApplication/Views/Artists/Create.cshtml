@model PlaylistManager.WebApplication.Models.Artist

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <main role="main" class="pb-3" style="margin-top: 5%;">
        <h1 class="text-white">Create <span class="spanArtist">Artist</span></h1>
        <!-- <h4 class="text-color">Artist</h4> -->
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Name" class="form-control" placeholder="Enter name..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success " />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="backttolist">Back to List</a>
        </div>
    </main>
</div>

