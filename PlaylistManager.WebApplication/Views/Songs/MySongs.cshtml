@model ICollection<PlaylistManager.WebApplication.Models.Song>
@{
    ViewData["Title"] = "MySongs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Songs</h1>

<div class="container-fluid">
    <div class="row">
        @foreach (var song in Model)
        {
            <div class="col-12 col-md-8 col-lg-4 text-center mt-4 mb-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@song.Title by @song.PerformingArtist.Name</h5>
                        <hr>
                        <a class="btn btn-success mb-2" asp-action="Details" asp-route-id="@song.Id">Details</a>
                        <br>
                        <a href="@song.Url" class="btn btn-primary">Listen</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

