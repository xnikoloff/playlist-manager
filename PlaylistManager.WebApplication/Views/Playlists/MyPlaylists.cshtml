@model IEnumerable<PlaylistManager.WebApplication.Models.Playlist>;
    @{
        ViewData["Title"] = "PlaylistContent";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

<h1>My Playlists</h1>

<div class="container-fluid">
    <div class="row">
        @foreach (var playlist in Model)
        {
            <div class="col-12 col-md-8 col-lg-4 text-center mt-4 mb-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@playlist.Title</h5>
                        <hr>
                        <a class="btn btn-primary" asp-action="PlaylistContent" asp-route-id="@playlist.Id">Open</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
